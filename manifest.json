{
  "manifest_version": 2,

  "name": "BuildTeam - Notifier",
  "description": "This extension allows the user to be notified about certain Steemit events.",
  "version": "1.0",
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
	
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "BuildTeam!"
  },
  
	"background": {
    "scripts": ["/dist/action_cable.js" , "jquery.js", "eventPage.js"],
    "persistent": true
  },
  "icons": { "16": "icon.png",
   "167": "icon_167.png" },
  "options_ui": {
    // Required.
    "page": "options.html",
    // Recommended.
    "chrome_style": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://minnowbooster.net/"
  ]
	
}
